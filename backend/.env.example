# Backend Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/baxoq_store
MONGODB_URI_PRODUCTION=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/baxoq_store

# JWT Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Email Service (for newsletter and contact form)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# Payment Integration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Global Shipping API (placeholder)
SHIPPING_API_KEY=your_shipping_api_key
SHIPPING_API_URL=https://api.shipping-provider.com/v1

# Newsletter Integration (e.g., Mailchimp)
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_LIST_ID=your_mailchimp_list_id

# Admin Configuration
ADMIN_EMAIL=admin@baxoq.store
ADMIN_PASSWORD=secure_admin_password
